<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Material.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:textSize">@dimen/default_text_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/ripple_orange</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/semi_bold</item>
    </style>

    <style name="AppTheme.RoundedButton" parent="AppTheme.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_rounded_button_height</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:background">@drawable/ripple_rounded</item>
    </style>

    <style name="AppTheme.TextView" parent="android:Widget.Material.TextView">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/default_text</item>
    </style>

    <style name="AppTheme.TextView.Title" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/default_title</item>
    </style>

    <style name="AppTheme.TextView.Subtitle" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/default_subtitle</item>
    </style>

    <style name="AppTheme.TextView.Small" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/default_small_text</item>
    </style>

    <style name="AppTheme.TextView.Micro" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/default_micro_text</item>
    </style>

</resources>
